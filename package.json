{
  "name": "@kapeta/local-cluster-config",
  "version": "0.0.23",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },

      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "types": "./dist/esm/index.d.ts",
  "main": "./dist/cjs/index.js",
  "scripts": {
    "build:esm": "tsc --module esnext --outDir ./dist/esm",
    "build:cjs": "tsc --module commonjs --outDir ./dist/cjs",
    "build": "npm run build:esm && npm run build:cjs",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kapetacom/local-cluster-config.git"
  },
  "keywords": [
    "kapeta"
  ],
  "author": "Henrik Hofmeister <hh@kapeta.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kapetacom/local-cluster-config/issues"
  },
  "homepage": "https://github.com/kapetacom/local-cluster-config#readme",
  "dependencies": {
    "glob": "^7.1.6",
    "yaml": "2.3.1"
  },
  "prettier": {
    "tabWidth": 4,
    "singleQuote": true
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "devDependencies": {
    "typescript": "^5.1.3",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.2.5",
    "@types/yaml": "^1.9.7"
  }
}
